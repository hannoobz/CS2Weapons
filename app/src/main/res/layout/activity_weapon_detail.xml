<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#272A3B"
    tools:context=".WeaponDetail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/detail_image"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="40dp"
                android:background="#FFAB00"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ak47" />

    <TextView
        android:id="@+id/detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="AK-47"
        android:textColor="#F1F1F2"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_image" />

    <TextView
        android:id="@+id/detail_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Price"
        android:textColor="#F1F1F2"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.153"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_name" />

    <TextView
        android:id="@+id/detail_priceValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="$2700"
        android:textColor="#F1F1F2"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toEndOf="@+id/detail_price"
        app:layout_constraintTop_toBottomOf="@+id/detail_name" />

    <TextView
        android:id="@+id/detail_damageValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="36"
        android:textColor="#F1F1F2"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/detail_priceValue"
        app:layout_constraintTop_toBottomOf="@+id/detail_priceValue" />

    <TextView
        android:id="@+id/detail_typeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Rifle"
        android:textColor="#F1F1F2"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/detail_damageValue"
        app:layout_constraintTop_toBottomOf="@+id/detail_damageValue" />

    <TextView
        android:id="@+id/detail_purchasableByValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="T"
        android:textColor="#F1F1F2"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/detail_typeValue"
        app:layout_constraintTop_toBottomOf="@+id/detail_typeValue" />

    <TextView
        android:id="@+id/detail_damage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Damage"
        android:textColor="#F1F1F2"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/detail_price"
        app:layout_constraintTop_toBottomOf="@+id/detail_price" />

    <TextView
        android:id="@+id/detail_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Type"
        android:textColor="#F1F1F2"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/detail_damage"
        app:layout_constraintTop_toBottomOf="@+id/detail_damage" />

    <TextView
        android:id="@+id/detail_purchasableBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Purchasable By"
        android:textColor="#F1F1F2"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/detail_type"
        app:layout_constraintTop_toBottomOf="@+id/detail_type" />

    <TextView
        android:id="@+id/detail_overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Overview"
        android:textColor="#F1F1F2"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/detail_purchasableBy"
        app:layout_constraintTop_toBottomOf="@+id/detail_purchasableBy" />

            <TextView
                android:id="@+id/detail_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="32dp"
                android:text="Lorem ipsum \n\n aaa"
                android:textColor="#F1F1F2"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/detail_purchasableByValue"
                app:layout_constraintStart_toStartOf="@+id/detail_purchasableBy"
                app:layout_constraintTop_toBottomOf="@+id/detail_overview" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>